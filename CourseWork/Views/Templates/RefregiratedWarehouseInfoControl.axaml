<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CourseWork.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CourseWork.Views.Templates.RefrigeratedWarehouseInfoControl"
             x:DataType="vm:MainWindowViewModel">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto">
        <ContentControl x:Name="ContentControl" />
        <TextBlock Grid.Row="1"
                   Text="{Binding SelectedWarehouse.ConvertToRefrigeratedWarehouse.Temperature, StringFormat='Temperature: {0}'}" />
        <Button Grid.Row="3" Command="{Binding AddProductCommand}"
                Background="Transparent" CornerRadius="8"
                VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                Width="36" Height="36"
                FontSize="18">
            +
        </Button>
    </Grid>

</UserControl>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CourseWork.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CourseWork.Views.WarehouseWindow"
        x:DataType="vm:WarehouseWindowViewModel"
        Title="Create Warehouse"
        Width="340" Height="360"
        Background="#1a1820">

    <Grid RowDefinitions="56, 24, 56, 24, 56, 24, 56"
          Width="300" Height="310">
        <TextBox Grid.Row="0" CornerRadius="8" Watermark="Name" Text="{Binding Name}" />
        <TextBox Grid.Row="2" CornerRadius="8" Watermark="Size" Text="{Binding Size}" />
        <TextBox Grid.Row="4" CornerRadius="8" Watermark="Address" Text="{Binding Address}" />
        <Button Grid.Row="6" Command="{Binding CreateWarehouseCommand}"
                Background="Transparent" CornerRadius="8" Width="120"
                HorizontalContentAlignment="Center"
                HorizontalAlignment="Center">
            Create
        </Button>
    </Grid>

</Window>